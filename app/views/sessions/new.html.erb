<% provide(:title, t("login")) %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |user| %>

      <%= user.label :email %>
      <%= user.email_field :email, class: 'form-control' %>

      <%= user.label :password %>
      <%= user.password_field :password, class: 'form-control' %>

      <%= user.label :remember_me, class: "checkbox inline" do %>
        <%= user.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>


      <%= user.submit t("login"), class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to t("signupnow"), signup_path %></p>
  </div>
</div>
